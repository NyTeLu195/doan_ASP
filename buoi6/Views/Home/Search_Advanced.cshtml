<section>
    <div class="container">
        <div class="row">
            @using (Html.BeginForm())
            {
            <p>
                Mã sản phẩm (SKU): @Html.TextBox("SKU") <input type="submit" value="Tìm kiếm" />
            </p>
            }
            @using (Html.BeginForm())
            {
                <p>
                    Tên sản phẩm: @Html.TextBox("ProductName") <input type="submit" value="Tìm kiếm" />
                </p>}
            @using (Html.BeginForm())
            {
                <p>
                    Mô tả: @Html.TextBox("Decription") <input type="submit" value="Tìm kiếm" />
                </p>}
            @using (Html.BeginForm())
            {
        <p>
            Gía thấp nhất: @Html.TextBox("Price_min")  Gía cao nhất: @Html.TextBox("Price_max") <input type="submit" value="Tìm kiếm" />
        </p>}
            @using (Html.BeginForm())
            {
                <p>
                    Loại sản phẩm: @Html.TextBox("type") <input type="submit" value="Tìm kiếm" />
                </p>}

        </div>
    </div>
</section>
<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>
    @foreach (var items in Model)
    {

        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        <img src="~/img/product/@items.Image" alt="" height="300" width="200" />
                        <h2> @Html.DisplayFor(modelItem => items.Price) VNĐ</h2>
                        <p>@Html.DisplayFor(modelItem => items.Name)</p>
                        <a asp-action="AddinHome" asp-route-id="@items.Id" class="btn btn-default add-to-cart">
                            <i class="fa fa-shopping-cart"></i>Add to cart
                        </a>
                        <a asp-action="Product_Detail" asp-route-id="@items.Id" class="btn btn-default add-to-cart">
                            <i class="fa fa fa-eye"></i>View Detail
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
