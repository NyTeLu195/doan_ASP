@model IEnumerable<buoi6.Models.Invoice>

@{

}
<section id="cart_items">
    <div class="container">
       
        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="price">ID</td>
                        <td class="price">IsuedDate</td>
                        <td class="quantity">ShippingAddress</td>
                        <td class="quantity">ShippingPhone</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>   
                        <td class="cart_price">
                            <p>@Html.DisplayFor(modelItem => item.Id)</p>
                        </td>
                        <td class="cart_price">
                            <p>@Html.DisplayFor(modelItem => item.IsuedDate)</p>
                        </td>
                        <td class="cart_quantity">
                            <div class="cart_quantity_button">
                                <p> @Html.DisplayFor(modelItem => item.ShippingAddress)</p>
                            </div>
                        </td>
                        <td class="cart_quantity">
                            <p>@Html.DisplayFor(modelItem => item.ShippingPhone)</p>
                        </td>
                        <td class="cart_total">
                            <p class="cart_total_price"> @item.Total  VND</p>
                        </td>
                        <td class="cart_delete">
                            <a asp-action="InvoiceDetail" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</section>           